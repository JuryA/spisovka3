{block title}Detail spisu{/block}
{block content}
    <div class="navigate">
    <a href="{link :Admin:Spisy:seznam}">Spisový plán</a> - Detail
    </div>
    <h2>{$Spis->nazev}</h2>

        {if ($FormUpravit=='info')}
    <div class="detail_blok">
        <div class="detail_hlavicka">Info</div>
        {control $spisForm}
    </div>
        {else}
    <div class="detail_blok">
        <div class="detail_hlavicka">Info</div>
        <dl class="detail_item">
            <dt>Typ spisu:</dt>
            <dd>{=Spis::typSpisu($Spis->typ)}&nbsp;</dd>
        </dl>

        <dl class="detail_item">
            <dt>Název:</dt>
            <dd>{$Spis->nazev}&nbsp;</dd>
        </dl>
        <dl class="detail_item">
            <dt>Popis:</dt>
            <dd>{!$Spis->popis|enl2br}&nbsp;</dd>
        </dl>

        <dl class="detail_item">
            <dt>Spisový znak:</dt>
            <dd>{=Spis::spisovyZnak($Spis,1)}&nbsp;</dd>
        </dl>
        <dl class="detail_item">
            <dt>Plněurčený spisový znak:</dt>
            <dd>{=Spis::spisovyZnak($Spis)}&nbsp;</dd>
        </dl>
        <dl class="detail_item">
            <dt>Skartační znak:</dt>
            <dd>{$Spis->skartacni_znak}&nbsp;</dd>
        </dl>
        <dl class="detail_item">
            <dt>Skartační lhůta:</dt>
            <dd>{$Spis->skartacni_lhuta}&nbsp;</dd>
        </dl>
        <dl class="detail_item">
            <dt>Spouštěcí událost:</dt>
            <dd>{=SpisovyZnak::spousteci_udalost($Spis->spousteci_udalost_id,10)}&nbsp;</dd>
        </dl>
        <dl class="detail_item">
            <dt>Stav:</dt>
            <dd>{=Spis::stav($Spis->stav)}&nbsp;</dd>
        </dl>
        <a href="{link :Admin:Spisy:detail, 'id'=>$Spis->id, 'upravit'=>'info'}">Upravit</a>
    </div>
        {/if}
