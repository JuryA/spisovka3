 * @param Paginator $paginator
 * @param array     $steps
 *}

<div class="paginator">
        <div class="paginator_info">Zobrazeno {$paginator->getLength()} z {$paginator->getItemCount()} záznamů.</div>
{if $paginator->pageCount > -1}
	{if $paginator->isFirst()}
        <span class="button">první</span>
        <span class="button">předchozí</span>
	{else}
	<a href="{link this, 'page' => $paginator->getFirstPage()}">první</a>
        <a href="{link this, 'page' => $paginator->page - 1}">předchozí</a>
	{/if}

	{foreach $steps as $step}
	{if $step == $paginator->page}
		<span class="current">{$step}</span>
	{else}
		<a href="{link this, 'page' => $step}">{$step}</a>
	{/if}
	{if $iterator->nextValue > $step + 1}<span>…</span>{/if}
	{/foreach}

	{if $paginator->isLast()}
	<span class="button">další</span>
        <span class="button">poslední</span>
	{else}
	<a href="{link this, 'page' => $paginator->page + 1}">další</a>
        <a href="{link this, 'page' => $paginator->getLastPage()}">poslední</a>
	{/if}


{/if}
</div>